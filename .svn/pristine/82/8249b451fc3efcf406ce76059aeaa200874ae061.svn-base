		<!-- ui : 포토공간목록 s -->
<div class="row row-cols-1 row-cols-md-4 g-4 photo_list mb-4">
<c:forEach items="${vacList }" var="vac">
	<!-- col -->
	<div class="col">
		<div class="card">
			<div class="photo_img">
				<div class="img-in no-img">
					<img src="${vac.vacImg }" class="card-img-top" alt="">
				</div>
			</div>
			<div class="card-body">
				<strong class="card-title">
				<em class="text-elipsis">${vac.vacName }</em>
				</strong>
				<button class="kinBtn border-0">
					<i class="icon kin"></i>
					<i class="sr-only">즐겨찾기버튼</i>
				</button>
			</div>
			<ul class="card-footer d-flex justify-content-between border-0 py-0">
				<li>
					<button class="likeBtn active border-0"><i class="icon like"><em class="sr-only">좋아요</em></i>999k</button>
				</li>
				<li>
					<span class="text-elipsis">${vac.vacEx }</span>
				</li>
			</ul>
		</div>
	</div>
</c:forEach>
	
</div>
