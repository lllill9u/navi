package kr.or.navi.task.controller;

import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.or.navi.task.service.TaskService;
import kr.or.navi.vo.TaskVO;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Controller
@RequestMapping("/task")
public class TaskController {
	
	@Inject
	TaskService taskService;
	
	@GetMapping
	public String task(Model model) {
		List<TaskVO> taskList =taskService.taskList();
		model.addAttribute(taskList);
		return "task/task";
	}

	@GetMapping("register")
	public String taskRegister() {
		return "task/taskRegister";
	}

	@GetMapping("detail")
	public String taskDetail() {
		return "task/taskDetail";
	}

	@GetMapping("modify")
	public String taskModify() {
		return "task/taskModify";
	}
	
}
